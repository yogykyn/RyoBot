{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "allowUnreachableCode": false,
    "newLine": "lf",
    "outDir": "dist",
    "paths": {
      "@/*": ["./src/*"],
    }
  },
  "include": [
    "app/**/*",
    "libs/**/*",
    "src/**/*",
  ],
  "exclude": [
    "scripts/"
  ]
}