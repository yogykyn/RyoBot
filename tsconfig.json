{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "baseUrl": ".",
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "allowUnreachableCode": false,
    "newLine": "lf",
    "outDir": "dist",
    "paths": {
      "@/*": ["src/*"],
      "@commands/*": ["src/commands/*"],
    }
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "scripts/"
  ]
}